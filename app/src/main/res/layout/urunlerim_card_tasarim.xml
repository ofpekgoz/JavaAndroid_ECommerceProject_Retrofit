<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewUrunlerim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardBackgroundColor="@color/colorCard"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtKategoriAd"
                android:layout_width="350dp"
                android:layout_height="27dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="Kategori Adı:"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtUrunAd"
                android:layout_width="350dp"
                android:layout_height="27dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="8dp"
                android:gravity="center|left"
                android:text="Ürün Adı:"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtKategoriAd" />

            <TextView
                android:id="@+id/txtSatisFiyat"
                android:layout_width="350dp"
                android:layout_height="0dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="Satış Fiyatı:"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtUrunAd" />

            <TextView
                android:id="@+id/txtStokDurumu"
                android:layout_width="350dp"
                android:layout_height="27dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="left"
                android:text="Stok Durumu:"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSatisFiyat" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>